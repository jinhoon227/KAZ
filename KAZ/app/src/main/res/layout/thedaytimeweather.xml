<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/layout_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="주간 날씨"
                android:fontFamily="@font/bamin"
                android:textColor="@color/weekchart"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:background="@drawable/dailyweather_ui">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="match_parent"
                                android:src="@drawable/waterer3"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weekWeatherDay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/wtdeepfont"
                                    android:gravity="center"
                                    android:layout_marginBottom="8dp"
                                    android:paddingRight="10dp"
                                    android:fontFamily="@font/bamin"
                                    android:text="수요일"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/weekWeatherContent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/wtfont"
                                    android:gravity="center"
                                    android:paddingRight="10dp"
                                    android:fontFamily="@font/bamin"
                                    android:text="절대 더워해\n⊂('_'⊂) "
                                    android:textSize="20dp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="5">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart"
                        android:background="@drawable/dailyweather_ui"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>