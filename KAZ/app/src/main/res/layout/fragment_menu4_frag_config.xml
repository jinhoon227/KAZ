<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weekbackground2"
    tools:context=".Menu4FragConfig"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/bamin"
        android:text="환경 설정"
        android:textColor="@color/weekchart"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:orientation="vertical">

        <Switch
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bamin"
            android:text="알림"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bamin"
            android:layout_marginBottom="10dp"
            android:paddingRight="20dp"
            android:text="날씨 정보를 배너로 확인할 수 있습니다" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sub_config_ui"
            android:paddingLeft="10dp"
            android:paddingBottom="20dp">

            <Switch
                android:id="@+id/screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bamin"
                android:text="잠금설정"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bamin"
                android:paddingRight="30dp"
                android:text="잠금화면에서도 식물을 확인할 수 있습니다." />

            <Switch
                android:id="@+id/sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bamin"
                android:text="방해 금지 모드"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bamin"
                android:paddingRight="30dp"
                android:text="10시~7시 사이에는 알람이 울리지 않게 합니다." />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>