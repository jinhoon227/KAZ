<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/sunnyday" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="13">


        <DigitalClock
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:textSize="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/level3"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tmon"
                    android:text="LV"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/LevelResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tmon"
                    android:text=""
                    android:textColor="#FFFF33"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:text="12345" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/EXP3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tmon"
                    android:text="EXP :"
                    android:textSize="20dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                    android:layout_width="159dp"

                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/progressbar_progressbar1" />
               <!-- <TextView
                    android:id="@+id/ExpResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/TmonMonsori"
                    android:text=""
                    android:textSize="20dp"
                    tools:text="12345" /> -->
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="5"
                android:background="@drawable/wood2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/weather2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/tmon"
                        android:text="날씨 : "
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/WeatherResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tmon"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="20dp"
                        tools:text="12345" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/temper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/tmon"
                        android:text="현재 기온 : "
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/temperResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/tmon"
                        android:text=""
                        android:textSize="20dp"
                        tools:text="12345" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
        </LinearLayout>

        <ImageView
            android:id="@+id/plant1"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            app:srcCompat="@drawable/sad" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ng.max.slideview.SlideView
                android:id="@+id/slider1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:sv_buttonBackgroundColor="#fff"
                app:sv_buttonImage="@drawable/ic_chevron_double_right_pink"
                app:sv_slideBackgroundColor="@color/colorPrimaryDark"
                app:sv_slideText="밀어서  잠금해제" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
