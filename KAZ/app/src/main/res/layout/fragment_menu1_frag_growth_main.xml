            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:weightSum="6"
                android:background="@drawable/talkballoon12"
                android:paddingLeft="40dp"
                android:paddingRight="35dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/WeatherResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bamin"
                        android:textStyle="bold"
                        android:text="맑음"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bamin"
                        android:textStyle="bold"
                        android:text=" 날씨! "
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/temperResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bamin"
                        android:textStyle="bold"
                        android:text="99"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bamin"
                        android:textStyle="bold"
                        android:text="도!"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/jack_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bamin"
                        android:textStyle="bold"
                        android:text="더워요 물을주세요!"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4">

                <ImageView
                    android:id="@+id/plant1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/bean1_sad" />

                <ImageView
                    android:id="@+id/umbrella3"
                    android:layout_width="166dp"
                    android:layout_height="209dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="@+id/plant1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/umbrella3"
                    tools:layout_editor_absoluteY="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/LevelResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bamin"
                            android:text="0"
                            android:textColor="@color/wtdeepfont"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/level3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/bamin"
                            android:text="Lv"
                            android:textColor="@color/wtdeepfont"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                        android:layout_width="74dp"
                        android:layout_height="18dp"
                        android:max="100"
                        android:progress="10"
                        android:progressDrawable="@drawable/progressbar_progressbar1" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/sprinklerButton"
                                android:layout_marginLeft="15dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/vec_sprinkler"
                                tools:visibility="visible" />

                            <Button
                                android:id="@+id/FertilizerButton"
                                android:layout_marginLeft="15dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/vec_beryo"
                                tools:visibility="visible" />

                            <Button
                                android:id="@+id/unbrellaButton"
                                android:layout_marginLeft="15dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/vec_umbrella"
                                tools:visibility="visible" />

                            <Button
                                android:id="@+id/hatButton"
                                android:layout_marginLeft="15dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/vec_sunglasses"
                                tools:visibility="visible" />

                            <Button
                                android:id="@+id/coatButton"
                                android:layout_marginLeft="15dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/vec_scarf"
                                tools:visibility="visible" />

                            <Button
                                android:id="@+id/button4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="act" />

                        </TableRow>
                    </TableLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
